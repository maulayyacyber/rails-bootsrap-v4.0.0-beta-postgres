<p id="notice"><%= notice %></p>

<div class="container" style="margin-top: 80px">
  <!-- Example row of columns -->
  <div class="row">

    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <i class="fa fa-book"></i> <%= @blog.title %>
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p>
              <%= image_tag @blog.thumbnail.url(:original), style: 'width:100%;margin-bottom:10px;border-radius:20px' %>
              <%= @blog.content %>
            </p>
            <footer class="blockquote-footer"><%= @blog.updated_at %></footer>
          </blockquote>

          <p>
          <%= link_to 'Edit', edit_blog_path(@blog) %> |
          <%= link_to 'Back', blogs_path %>

        </div>

    </div>

    </div>

    <div class="col-md-4">
      <div class="list-group">
        <span class="list-group-item active" style="background-color: #343a40;border-color: #343a40">
          <i class="fa fa-book"></i> Most Popular Blog
        </span>
        <% @blogs.each do |blog| %>
          <a href="<%= blog.slug %>" class="list-group-item list-group-item-action"><i class="fa fa-long-arrow-right"></i> <%= blog.title %></a>
        <% end %>
      </div>
    </div>

  </div>
</div>